{
  "name": "@pikachu-metal/update-manager",
  "version": "1.5.0",
  "description": "Interactive CLI to manage updates from multiple package managers (WinGet, Proto, npm, pnpm, Bun, PowerShell Modules, etc.)",
  "author": "Ã€ngel Delgado FernÃ¡ndez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikachumetal/update-manager.git"
  },
  "bugs": {
    "url": "https://github.com/pikachumetal/update-manager/issues"
  },
  "homepage": "https://github.com/pikachumetal/update-manager#readme",
  "keywords": [
    "cli",
    "update-manager",
    "updater",
    "package-updater",
    "winget",
    "proto",
    "npm",
    "pnpm",
    "bun",
    "powershell",
    "windows",
    "package-manager",
    "automation",
    "dependencies",
    "update-checker"
  ],
  "type": "module",
  "bin": {
    "um": "./bin/cli.js",
    "update-manager": "./bin/cli.js"
  },
  "files": [
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile bin/update-manager.exe && bun -e \"await Bun.write('bin/um.exe', Bun.file('bin/update-manager.exe'))\"",
    "clean": "bun -e \"const fs=require('fs'); ['bin/um.exe','bin/update-manager.exe'].forEach(f=>fs.existsSync(f)&&fs.unlinkSync(f))\"",
    "prebuild": "bun run clean",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "sonar": "sonar --define sonar.host.url=https://sonarqube.devtools.local --define sonar.token=%SONAR_TOKEN% --define sonar.projectKey=update-manager",
    "test:coverage": "bun test --coverage",
    "link": "bun link",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@sonar/scan": "^4.3.4",
    "@types/bun": "^1.3.6",
    "@types/node": "^24.10.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "sonarqube-scanner": "^4.3.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24",
    "bun": ">=1.3"
  },
  "packageManager": "bun@1.3.6"
}
