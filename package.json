{
  "name": "@pikachu-metal/update-manager",
  "version": "1.1.1",
  "description": "Interactive CLI tool for managing and launching development projects",
  "author": "Àngel Delgado Fernández",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikachumetal/update-manager.git"
  },
  "keywords": [
    "cli",
    "update-manager",
    "launcher",
    "dev-tools",
    "windows",
    "powershell"
  ],
  "type": "module",
  "bin": {
    "um": "src/index.ts",
    "update-manager": "src/index.ts"
  },
  "files": [
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile bin/update-manager.exe"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  }
}